<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Tikit\TikitBundle\Entity\Petition" table="petition">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="petitionTitle" type="string" column="petition_title" length="250" nullable="false"/>
    <field name="petitionDescription" type="string" column="petition_description" length="4000" nullable="false"/>
    <field name="petitionUrl" type="string" column="petition_url" length="300" nullable="false"/>
    <field name="score" type="integer" column="score" nullable="false"/>
    <field name="dateAdded" type="datetime" column="date_added" nullable="false"/>
    <field name="status" type="boolean" column="status" nullable="false"/>
    <many-to-one field="user" target-entity="Acme\UserBundle\Entity\User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="category" target-entity="Category">
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
